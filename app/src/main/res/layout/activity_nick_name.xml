<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ali.framework.view.activity.Orderctivity">
    <LinearLayout
        android:layout_width="1404px"
        android:layout_height="88px"
        android:layout_marginTop="15px"
        android:background="@drawable/linearlayout_background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16px"
            android:layout_height="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="35px"
            android:src="@mipmap/iconprevious" />

        <TextView
            android:layout_width="64px"
            android:layout_height="38px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="23px"
            android:text="返回"
            android:textSize="32px" />

        <TextView
            android:layout_width="160px"
            android:layout_height="42px"
            android:layout_marginLeft="508px"
            android:layout_marginTop="25px"
            android:text="修改昵称"
            android:textSize="36px"
            android:textStyle="bold" />
        <TextView
            android:layout_width="160px"
            android:layout_height="42px"
            android:layout_marginLeft="490px"
            android:layout_marginTop="25px"
            android:text="完成"
            android:id="@+id/complete"
            android:textColor="#CCCACA"
            android:textSize="32px"
            android:textStyle="bold" />
    </LinearLayout>
     <android.support.v7.widget.LinearLayoutCompat
         android:layout_width="985px"
         android:layout_marginTop="66px"
         android:layout_marginLeft="220px"
         android:orientation="horizontal"
         android:layout_height="144px">
         <EditText
             android:layout_width="930px"
             android:layout_height="144px"
             android:singleLine="true"
             android:paddingTop="50px"
             android:id="@+id/update_name"
             android:background="@drawable/linearlayout_background"
             android:textSize="32px"
             />
         <ImageView
             android:layout_width="51px"
             android:layout_marginTop="70px"
             android:id="@+id/canle_img"
             android:src="@mipmap/iconclosecirclefill"
             android:layout_height="51px"/>

     </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>
