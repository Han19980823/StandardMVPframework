<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ali.framework.view.activity.Orderctivity">
    <LinearLayout
        android:layout_width="1404px"
        android:layout_height="88px"
        android:layout_marginTop="15px"
        android:background="@drawable/linearlayout_background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16px"
            android:layout_height="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="35px"
            android:src="@mipmap/iconprevious" />

        <TextView
            android:layout_width="64px"
            android:layout_height="38px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="23px"
            android:text="返回"
            android:textSize="32px" />

        <TextView
            android:layout_width="160px"
            android:layout_height="42px"
            android:layout_marginLeft="508px"
            android:layout_marginTop="25px"
            android:text="新增地址"
            android:textSize="36px"
            android:textStyle="bold" />
        <TextView
            android:layout_width="160px"
            android:layout_height="42px"
            android:layout_marginLeft="490px"
            android:layout_marginTop="25px"
            android:text="完成"
            android:textColor="#7F7F7F"
            android:textSize="32px"
            android:textStyle="bold" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="1126px"
        android:layout_marginTop="66px"
        android:background="@drawable/linearlayout_background"
        android:layout_marginLeft="138px"
        android:layout_height="96px">

        <TextView
            android:layout_width="97px"
            android:text="联系人"
            android:layout_marginTop="18px"
            android:layout_marginLeft="50px"
            android:textSize="32px"
            android:layout_height="45px"/>
        <EditText
            android:layout_width="match_parent"
            android:hint="请输入联系人姓名"
            android:layout_marginTop="18px"
            android:background="@null"
            android:textSize="32px"
            android:textColorHint="#7F7F7F"
            android:singleLine="true"
            android:layout_marginLeft="350px"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="1126px"
        android:layout_marginTop="40px"
        android:background="@drawable/linearlayout_background"
        android:layout_marginLeft="138px"
        android:layout_height="96px">

        <TextView
            android:layout_width="129px"
            android:text="手机号码"
            android:layout_marginTop="18px"
            android:layout_marginLeft="50px"
            android:textSize="32px"
            android:layout_height="45px"/>
        <EditText
            android:layout_width="match_parent"
            android:hint="请输入11位手机号码"
            android:layout_marginTop="18px"
            android:background="@null"
            android:textSize="32px"
            android:textColorHint="#7F7F7F"
            android:singleLine="true"
            android:layout_marginLeft="350px"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="1126px"
        android:layout_marginTop="40px"
        android:background="@drawable/linearlayout_background"
        android:layout_marginLeft="138px"
        android:layout_height="96px">

        <TextView
            android:layout_width="129px"
            android:text="选择地区"
            android:layout_marginTop="18px"
            android:layout_marginLeft="50px"
            android:textSize="32px"
            android:layout_height="45px"/>
        <EditText
            android:layout_width="match_parent"
            android:hint="地区信息"
            android:layout_marginTop="18px"
            android:background="@null"
            android:textSize="32px"
            android:textColorHint="#7F7F7F"
            android:singleLine="true"
            android:layout_marginLeft="350px"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="1126px"
        android:layout_marginTop="40px"
        android:background="@drawable/linearlayout_background"
        android:layout_marginLeft="138px"
        android:layout_height="96px">

        <TextView
            android:layout_width="129px"
            android:text="详细地址"
            android:layout_marginTop="18px"
            android:layout_marginLeft="50px"
            android:textSize="32px"
            android:layout_height="45px"/>
        <EditText
            android:layout_width="match_parent"
            android:hint="街道门牌街道"
            android:layout_marginTop="18px"
            android:background="@null"
            android:textSize="32px"
            android:textColorHint="#7F7F7F"
            android:singleLine="true"
            android:layout_marginLeft="350px"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="1126px"
        android:layout_marginTop="40px"
        android:background="@drawable/linearlayout_background"
        android:layout_marginLeft="138px"
        android:layout_height="96px">

        <TextView
            android:layout_width="129px"
            android:text="邮编号码"
            android:layout_marginTop="18px"
            android:layout_marginLeft="50px"
            android:textSize="32px"
            android:layout_height="45px"/>
        <EditText
            android:layout_width="match_parent"
            android:hint="邮政编码"
            android:layout_marginTop="18px"
            android:background="@null"
            android:textSize="32px"
            android:textColorHint="#7F7F7F"
            android:singleLine="true"
            android:layout_marginLeft="350px"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>
