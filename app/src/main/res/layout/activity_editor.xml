<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ali.framework.view.activity.EditorActivity">

    <LinearLayout
        android:layout_width="1404px"
        android:layout_height="88px"
        android:layout_marginTop="15px"
        android:background="@drawable/linearlayout_background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16px"
            android:layout_height="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="35px"
            android:src="@mipmap/iconprevious" />

        <TextView
            android:layout_width="64px"
            android:layout_height="38px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="23px"
            android:text="返回"
            android:textSize="32px" />

        <TextView
            android:layout_width="80px"
            android:layout_height="43px"
            android:layout_marginLeft="544px"
            android:layout_marginTop="25px"
            android:text="编辑"
            android:textSize="36px"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="985px"
        android:id="@+id/nickname"
        android:layout_height="144px"
        android:layout_marginLeft="195px"
        android:layout_marginTop="63px"
        android:background="@drawable/linearlayout_background"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="73px"
            android:layout_height="50px"
            android:layout_marginLeft="25px"
            android:text="昵称"
            android:textColor="#3D3D3D"
            android:textSize="36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_marginLeft="635px"
            android:id="@+id/namea"
            android:textColor="#D6D4D4"
            android:textSize="36px" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="35px"
            android:layout_marginTop="5px"
            android:src="@mipmap/iconright" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="985px"
        android:layout_height="144px"
        android:id="@+id/sex"
        android:layout_marginLeft="195px"
        android:layout_marginTop="63px"
        android:background="@drawable/linearlayout_background"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="73px"
            android:layout_height="50px"
            android:layout_marginLeft="25px"
            android:text="性别"
            android:textColor="#3D3D3D"
            android:textSize="36px" />

        <TextView
            android:layout_width="37px"
            android:layout_height="50px"
            android:layout_marginLeft="760px"
            android:text="女"
            android:textColor="#D6D4D4"
            android:textSize="36px" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="5px"
            android:src="@mipmap/iconright" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="985px"
        android:layout_height="144px"
        android:id="@+id/address"
        android:layout_marginLeft="195px"
        android:layout_marginTop="63px"
        android:background="@drawable/linearlayout_background"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="145px"
            android:layout_height="50px"
            android:layout_marginLeft="25px"
            android:text="我的地址"
            android:textColor="#3D3D3D"
            android:textSize="36px" />


        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="768px"
            android:layout_marginTop="5px"
            android:src="@mipmap/iconright" />
    </LinearLayout>
    <Button
        android:layout_width="787px"
        android:background="@drawable/round_corner_line_radius_5dp"
        android:text="退出登录"
        android:textColor="#CCCACA"
        android:layout_marginTop="623px"
        android:layout_marginLeft="310px"
        android:textSize="33px"
        android:layout_height="100px"/>
</android.support.v7.widget.LinearLayoutCompat>
