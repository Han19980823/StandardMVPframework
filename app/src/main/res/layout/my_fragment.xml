<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="1404px"
        android:layout_marginTop="15px"
        android:layout_height="88px">

        <TextView
            android:layout_width="150px"
            android:layout_height="45px"
            android:layout_marginLeft="630px"
            android:layout_marginTop="26px"
            android:text="个人中心"
            android:textSize="36px"
            android:textStyle="bold" />
    </android.support.v7.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="1404px"
        android:layout_height="303px"
        android:id="@+id/login_myMessage"
        android:background="#BFECE8E8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_marginLeft="183px"
            android:layout_marginTop="87px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="59px"
                android:id="@+id/my_name"
                android:text="武汉郭德纲"
                android:textColor="#3D3D3D"
                android:textSize="42px" />

            <LinearLayout
                android:layout_width="110px"
                android:layout_height="40px"
                android:layout_marginLeft="10px"
                android:layout_marginTop="8px"
                android:background="@drawable/round_corner_line_radius_5dp">

                <TextView
                    android:layout_width="169px"
                    android:layout_height="59px"
                    android:layout_marginTop="3px"
                    android:paddingLeft="18px"
                    android:text="八年级"
                    android:textColor="#3D3D3D"
                    android:textSize="24px" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="290px"
            android:layout_height="60px"
            android:layout_marginLeft="183px"
            android:layout_marginTop="173px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="233px"
                android:layout_height="50px"
                android:text="18239280409"
                android:textColor="#3D3D3D"
                android:textSize="36px" />

            <ImageView
                android:layout_width="33px"
                android:layout_height="33px"
                android:layout_marginLeft="5px"
                android:layout_marginTop="10px"
                android:src="@mipmap/iconbianji" />
        </LinearLayout>

        <ImageView
            android:layout_width="141px"
            android:layout_height="141px"
            android:layout_marginLeft="1025px"
            android:layout_marginTop="78px"
            android:src="@mipmap/iconphoto" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="985px"
        android:layout_height="144px"
        android:id="@+id/my_members"
        android:background="@drawable/linearlayout_background"
        android:layout_marginLeft="195px"
        android:layout_marginTop="63px"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="54px"
            android:layout_height="48px"
            android:src="@mipmap/iconpersonal" />

        <TextView
            android:layout_width="145px"
            android:layout_height="50px"
            android:layout_marginLeft="25px"
            android:text="会员中心"
            android:textColor="#3D3D3D"
            android:textSize="36px" />

        <TextView
            android:layout_width="305px"
            android:layout_height="50px"
            android:layout_marginLeft="357px"
            android:text="2021年5月2日到期"
            android:textColor="#D6D4D4"
            android:textSize="36px" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="52px"
            android:layout_marginTop="5px"
            android:src="@mipmap/iconright" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="985px"
        android:layout_height="144px"
        android:id="@+id/my_order"
        android:background="@drawable/linearlayout_background"
        android:layout_marginLeft="195px"
        android:layout_marginTop="63px"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="54px"
            android:layout_height="48px"
            android:src="@mipmap/iconlist" />

        <TextView
            android:layout_width="145px"
            android:layout_height="50px"
            android:layout_marginLeft="25px"
            android:text="我的订单"
            android:textColor="#3D3D3D"
            android:textSize="36px" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="714px"
            android:layout_marginTop="5px"
            android:src="@mipmap/iconright" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="985px"
        android:id="@+id/my_topic"
        android:background="@drawable/linearlayout_background"
        android:layout_height="144px"
        android:layout_marginLeft="195px"
        android:layout_marginTop="63px"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="54px"
            android:layout_height="48px"
            android:src="@mipmap/icontip" />

        <TextView
            android:layout_width="109px"
            android:layout_height="50px"
            android:layout_marginLeft="25px"
            android:text="错题集"
            android:textColor="#3D3D3D"
            android:textSize="36px" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="742px"
            android:layout_marginTop="5px"
            android:src="@mipmap/iconright" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="985px"
        android:layout_height="144px"
        android:id="@+id/my_feedback"
        android:background="@drawable/linearlayout_background"
        android:layout_marginLeft="195px"
        android:layout_marginTop="63px"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="54px"

            android:layout_height="48px"
            android:src="@mipmap/iconservice" />

        <TextView
            android:layout_width="145px"
            android:layout_height="50px"
            android:layout_marginLeft="25px"
            android:text="意见反馈"
            android:textColor="#3D3D3D"
            android:textSize="36px" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="700px"
            android:layout_marginTop="5px"
            android:src="@mipmap/iconright" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="985px"
        android:id="@+id/my_messages"
        android:background="@drawable/linearlayout_background"
        android:layout_height="144px"
        android:layout_marginLeft="195px"
        android:layout_marginTop="63px"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="54px"
            android:layout_height="48px"
            android:src="@mipmap/iconsetting" />

        <TextView
            android:layout_width="73px"
            android:layout_height="50px"
            android:layout_marginLeft="25px"
            android:text="我的订单"
            android:textColor="#3D3D3D"
            android:textSize="36px" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="770px"
            android:layout_marginTop="5px"
            android:src="@mipmap/iconright" />
    </LinearLayout>
</LinearLayout>
